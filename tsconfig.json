{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "esModuleInterop": true,
        "outDir": "./dist",
        "removeComments": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "sourceMap": true
    },
    "typeRoots": ["./node_modules/@types"],
    "include": [
        "src",
        "src/**/*.ts",
        "@types/**/*.d.ts",
        "node_modules/@webpd/types/Pd.ts",
        "node_modules/@webpd/types/PdJson.ts"
    ]
}